    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_login">

    <fragment
        android:id="@+id/navigation_login"
        android:name="wonderful.workouts.fragments.LoginView"
        android:label="@string/title_login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/home_page"
        android:name="wonderful.workouts.fragments.HomeView"
        android:label="Fancy Home!"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_profile_page"
        android:name="wonderful.workouts.fragments.ProfileView"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_history_page"
        android:name="wonderful.workouts.fragments.HistoryView"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/navigation_newEditMovement_page"
